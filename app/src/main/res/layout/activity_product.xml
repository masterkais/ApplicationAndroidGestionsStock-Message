<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.isetsf.nejma.ProductActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
            <TextView
                android:id="@+id/tv_product_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="22sp"/>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categorie"
                    android:textSize="14sp"
                    android:id="@+id/tv_categorie_detail"/>
             </LinearLayout>
              <LinearLayout
                  android:layout_margin="5dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="right"
                 >
                  <com.like.LikeButton
                      app:like_drawable="@drawable/ic_star_liked"
                      app:unlike_drawable="@drawable/ic_star"
                      app:icon_type="star"
                      app:icon_size="30dp"
                      android:layout_gravity="center"
                      android:id="@+id/star_button"
                      android:layout_width="35dp"
                      android:layout_height="35dp"
                      />
              </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/img_product_detail"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/product"/>

             <LinearLayout
                 android:layout_margin="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_gravity="center"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="price"
                     android:textSize="18sp"
                     android:textStyle="bold"
                     android:id="@+id/tv_price_detail"/>
                 <FrameLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="right">
                 <ImageView
                     android:id="@+id/img_promo_detail"
                     android:layout_gravity="right"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     app:srcCompat="@drawable/ic_stars"/>
                 </FrameLayout>

             </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
